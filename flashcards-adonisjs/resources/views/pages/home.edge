<!DOCTYPE html>
<html>
  <head>
    <title>
      Accueil
    </title>
  </head>
  <body>

    <header>
      <div class="logo" style="border: 1px solid #ccc; padding: 5px;">
        (logo)
      </div>
      <div class="login">
        <span class="user">Username</span>
        <button class="deco">Déconnection</button>
      </div>
    </header>

    <main>
      <h1>
        Mes decks
      </h1>

      <table>
        <thead>
          <tr>
            <th>
              Titre
            </th>
            <th>
              Description
            </th>
            <th>
              Cartes
            </th>
          </tr>
        </thead>
        <tbody>
          @each(deck in decks)
            <tr>
              <td>
                {{ deck.Titre }}
              </td>
              <td>
                {{ deck.description }}
              </td>
              <td>
                {{ deck.nbCard }}
              </td>
            </tr>
          @end
        </tbody>
      </table>

      <button class="btn-ajouter">Ajouter</button>
    </main>

  </body>
</html>

<style>
  body {
    font-family: 'Poppins', sans-serif;
    margin: 0;
    padding: 0;
  }
  
  header {
    background-color: #cac97eff;
    /* Un gris clair est plus proche du design original */
    height: 60px;
    display: flex;
    align-items: center;
    padding: 0 20px;
  }
  
  /* Pousse tout vers la droite */
  
  header .login {
    margin-left: auto;
    display: flex;
    align-items: center;
    gap: 15px;
    /* Espace entre le nom et le bouton */
  }
  
  /* Style du nom d'utilisateur */
  
  span.user {
    color: #333;
    font-weight: 500;
    font-size: 0.9rem;
  }
  
  /* Style du bouton de déconnexion */
  
  button.deco {
    background-color: white;
    /* Fond blanc comme sur la maquette */
    border: 1px solid #000;
    border-radius: 8px;
    padding: 5px 15px;
    cursor: pointer;
    font-size: 0.85rem;
    transition: background 0.2s;
  }
  
  button.deco:hover {
    background-color: #e5e5e5;
  }
  
  h1 {
    text-align: center;
    margin-top: 40px;
  }
  
  /* Style pour le tableau */
  
  table {
    width: 80%;
    margin: 20px auto;
    border-collapse: collapse;
  }
  
  th {
    text-align: left;
    padding-bottom: 10px;
  }
  
  td {
    padding: 10px 0;
  }
  
  .btn-ajouter {
    display: block;
    margin: 20px auto 20px 10%;
    /* Aligné à gauche du tableau */
    padding: 8px 20px;
    border: 1px solid #000;
    background: white;
    border-radius: 5px;
    cursor: pointer;
  }
</style>